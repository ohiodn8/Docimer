<% @templates.each do |template| %>
    <% if template.bar == 1 %><%= render "layouts/hd/header" %> <% elsif template.bar == 2  %> <%= render "layouts/hd/header2" %>
        <% elsif template.bar == 3  %> <%= render "layouts/hd/header3" %> <% elsif template.bar == 4  %> <%= render "layouts/hd/header4" %>
        <% elsif template.bar == 5  %> <%= render "layouts/hd/header5" %> <% elsif template.bar == 6  %> <%= render "layouts/hd/header6" %>
        <% elsif template.bar == 7  %> <%= render "layouts/hd/header7" %> <% else %> <%= render "layouts/hd/header" %>
    <% end %> 
<% end %> 