<div class="jumbotron text-center">
  <h1><%= @blog.title %></h1>
  <p>
      <small>
          <% if @blog.created_at > Time.now.beginning_of_day %><%="#{time_ago_in_words(@blog.created_at)} ago"%>
          <% else %><%= @blog.created_at.strftime("%b %d, %Y") %><% end %> by <em style="color: red;">Admin</em> in
           <%= link_to @blog.category.title, category_path(:id => @blog.category.id) %>
      </small>
  </p>
  <% if cmsadmin_signed_in? %>
    <div class="panel-footer">
        <td><%= link_to 'Edit', edit_blog_path(@blog), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', @blog, method: :delete, class: "btn btn-warning btn-sm", data: { confirm: 'Are you sure?' } %></td>
    </div>    
  <% end %>
</div>

<div style="word-wrap:break-word;" class="
    <% @templates.each do |template| %>
        <% if template.bar == 5 %>container-fluid<% else %>container<% end %>
    <% end%>">
<div class="text-center">  
    <%= image_tag @blog.image.url(:medium) %>  
</div> 
    
<p><%= simple_format @blog.body %></p>

<br><br><br>
</div>
