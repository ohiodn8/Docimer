<h3>
  <strong>Category:</strong>
  <%= @category.title %>
</h3>

<div class="
    <% @templates.each do |template| %>
        <% if template.bar == 5 %>container-fluid<% else %>container<% end %>
    <% end%>">
    <% @blogs.each do |blog| %>
        <div class="docr col-sm-4 col-xs-12">
          <div class="panel panel-default text-center">
            <div class="panel-body" style="word-wrap:break-word;">
                <%= image_tag blog.image.url(:medium) %>  
            <p><small><% if blog.created_at > Time.now.beginning_of_day %>
					<%="#{time_ago_in_words(blog.created_at)} ago"%><% else %>
					<%= blog.created_at.strftime("%b %d, %Y") %><% end %> by Admin  | Category: <%= link_to blog.category.title, category_path(:id => blog.category.id) %></small></p>
            <hr>    
            <h2><%= link_to blog.title.truncate(55), blog %></h2>
            <p><%= truncate(strip_tags(blog.body), length: 300) %></p>

            </div>
          </div>      
        </div>
    <% end %>
</div>

<script>
	$(function() {
		$('.docr').matchHeight({
		byRow: true,
		property: 'height',
		target: null,
		remove: false
	});
	});
</script>
